    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'wgpu_engine'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=wgpu-engine"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'winit'",
            "cargo": {
                "args": [
                    "build",
                    "--example=winit",
                    "--features=winit-support",
                ],
                "filter": {
                    "name": "winit",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/core"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'egui'",
            "cargo": {
                "args": [
                    "build",
                    "--example=egui",
                    "--features=egui-support",
                ],
                "filter": {
                    "name": "egui",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/core"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'gltf-viewer'",
            "cargo": {
                "args": [
                    "build",
                    "--package=gltf-viewer"
                ],
                "filter": {
                    "name": "gltf-viewer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/core"
        }
    ]
}